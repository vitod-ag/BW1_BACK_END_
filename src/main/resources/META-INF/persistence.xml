<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <!-- PERSISTENCE UNIT è COLLEGATO AL DATABES, più database abbiamo piu persistence unit ci saranno,
    all'interno ci sono delle proprietà (propriety) che servono al collegamento con il server,
    -->
    <persistence-unit name="libreria" transaction-type="RESOURCE_LOCAL">
        <class><!-- Entity Manager Class Name --></class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/libreria" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="Dfeb43h8a2!" /> <!--QUI VA INSERITA LA PASSWORD-->
            <property name="hibernate.default_schema" value="public" />
            <property name="hibernate.hbm2ddl.auto" value="update" /> <!--QUESTA PROPRIETA è UTLIZZABILE SOLO SE LE TABBELLE NON CI SONO,
            UPDATE == SE NON CI SONO LE CREA, SE CI SONO LE AGGIORNA-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
        </properties>
    </persistence-unit>
</persistence>